<p id="notice"><%= notice %></p>

<h1>Alarmes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alarms.each do |alarm| %>
      <tr>
        <td><%= alarm.code %></td>
        <td><%= alarm.title %></td>
        <td><%= alarm.description %></td>
        <td><%= link_to 'Visualizar', alarm, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_alarm_path(alarm), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Deletar', alarm, class: 'btn btn-danger', method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Alarme', new_alarm_path, class: 'btn btn-primary btn-lg' %>
