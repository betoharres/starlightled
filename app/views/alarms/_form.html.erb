<%= simple_form_for(@alarm) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code, class: 'form-control', label: 'Codigo' %>
    <%= f.input :title, class: 'form-control', label: 'Titulo' %>
    <%= f.input :description, class: 'form-control', label: 'Descricao' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Criar Alarme', class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
