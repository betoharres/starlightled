<%= simple_form_for(@event_code) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code, class: 'form-control', label: 'Codigo' %>
    <%= f.input :name, class: 'form-control', label: 'Nome' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Salvar Codigo de Evento', class: 'btn btn-success btn-lg' %>
  </div>
<% end %>
