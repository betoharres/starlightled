<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :execute_at %>
    <%= f.input :code %>
    <%= f.input :aasm_state %>
    <%= f.association :node %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
