<p id="notice"><%= notice %></p>

<h1>Permissões</h1>

<table>
  <thead>
    <tr>
      <th>Recurso</th>
      <th>Habilidade</th>
      <th>Função</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.resource %></td>
        <td><%= permission.ability %></td>
        <td><%= permission.role.name %></td>
        <td><%= link_to 'Mostrar', permission %></td>
        <td><%= link_to 'Editar', edit_permission_path(permission) %></td>
        <td><%= link_to 'Excluir', permission, method: :delete, data: { confirm: 'Confirmar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova permissão', new_permission_path %>
