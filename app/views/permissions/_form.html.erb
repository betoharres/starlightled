<%= simple_form_for(@permission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :resource, label: "Recurso" %>
    <%= f.input :ability, label: "Habilidade" %>
    <%= f.association :role, label: "Função" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: "Salvar" %>
  </div>
<% end %>
