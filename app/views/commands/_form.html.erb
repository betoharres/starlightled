<%= simple_form_for(@command) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group col-xs-6 col-xs-offset-3">
    <%= f.input :name, class: 'form-control input-sm', label: 'Nome do Comando' %>
    <%= f.label 'Conteudo', :content %>
    <%= f.text_area :content, class: 'form-control'%>

    <hr/>

    <div class="form-actions">
      <%= f.button :submit, value: 'Criar Comando', class: 'btn btn-success btn-lg' %>
    </div>

  </div>
<% end %>
