<p id="notice"><%= notice %></p>

<h1>Comandos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commands.each do |command| %>
      <tr>
        <td><%= link_to command.name.to_s, command.name, class: 'btn btn-link btn-lg' %></td>
        <td><%= link_to 'Visualizar', command, class: 'btn btn-default btn-lg' %></td>
        <td><%= link_to 'Editar', edit_command_path(command), class: 'btn btn-warning btn-lg' %></td>
        <td><%= link_to 'Deletar', command, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-lg' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Comando', new_command_path, class: 'btn btn-info btn-lg'%>
