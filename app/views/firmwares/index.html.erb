<p id="notice"><%= notice %></p>

<h1>Listing Firmwares</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Content type</th>
      <th>File content</th>
      <th>Checksum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firmwares.each do |firmware| %>
      <tr>
        <td><%= firmware.filename %></td>
        <td><%= firmware.content_type %></td>
        <td><%= firmware.checksum %></td>
        <td><%= link_to 'Show', firmware %></td>
        <td><%= link_to 'Edit', edit_firmware_path(firmware) %></td>
        <td><%= link_to 'Destroy', firmware, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

