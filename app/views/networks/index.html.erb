<%- model_class = Network -%>
<div class="page-header">
  <!-- <h1><%=t '.title', :default => Network %></h1> -->
  <h1>Redes</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><!--<%= model_class.human_attribute_name(:name) %>-->Nome</th>
      <th><!--<%= model_class.human_attribute_name(:created_at) %>-->Criado em</th>
      <th><!--<%=t '.actions', :default => t("helpers.actions") %>-->Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @networks.each do |network| %>
      <tr>
        <td><%= network.id %></td>
        <td><%= network.name %></td>
        <td><%=l network.created_at, format: :long %></td>
        <td>
		  <!--
          <%= link_to network_path(network), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to network_path(network), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
		  -->
		  
		  <%= link_to network_path(network), :class => 'btn btn-xs', :title => "#{ t('.show', :default => "Mostrar") }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to network_path(network), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')) }, :class => 'btn btn-xs', :title => "Excluir" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
