<h2>Editar Conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: 'Nome' %>
    <%= f.input :email, required: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmação do email: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Deixe em branco se não deseja mudar a senha", required: false, label: 'Nova Senha' %>
    <%= f.input :password_confirmation, required: false, label: 'Confirme sua Senha' %>
    <%= f.input :current_password, hint: "Digite sua senha atual para autorizar as mudanças", required: true, label: 'Senha atual' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<br />
<br />

<h3>Excluir minha conta</h3>
<p><%= link_to "Excluir", registration_path(resource_name), class: 'btn btn-danger btn-sm', data: { confirm: "Tem certeza?" }, method: :delete %></p>
