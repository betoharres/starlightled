<div class="block-center mt-xl wd-xl">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('angle/logo.png') %>" alt="Image" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">Fa√ßa login para continuar</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mb-lg"}) do |f| %>
            <div class="form-group has-feedback">
               <%= f.email_field :email, class: "text-field form-control", placeholder: 'E-mail', html: {spellcheck: "false"} %>
               <span class="fa fa-envelope form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
               <%= f.password_field :password, class: "text-field form-control", placeholder: 'Senha', html: {autocomplete: "off"} %>
               <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <div class="clearfix">
               <div class="checkbox c-checkbox pull-left mt0">
                  <label>
                     <%= f.check_box :remember_me %>
                     <span class="fa fa-check"></span>Manter Conectado</label>
               </div>
               <div class="pull-right"><%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'text-muted' %>
                </div><br />
                <%= f.submit "Login", class: "btn btn-block btn-primary mt-lg" %>
               </div>
            </div>
          <% end %>
         <!-- <p class="pt&#45;lg text&#45;center">Precisa Registrar&#45;se?</p><a href="<%= new_registration_path(resource_name) %>" class="btn btn&#45;block btn&#45;default">Registrar&#45;se</a> -->
      </div>
   </div>
   <!-- END panel-->
</div>
