<%- model_class = Product -%>
<div class="page-header">
  <!-- <h1><%=t '.title', :default => Product %></h1> -->
  <h1>Produtos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tipo</th>
      <th>Nome</th>
      <th>Modelo</th>
      <th>Número serial</th>
      <th>Endereço MAC</th>
      <th>Código do produto</th>
      <th>Data de fabricação</th>
      <th>Criado em</th>
      <th>Visualizar</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.productable_id %></td>
        <td><%= t(product.productable_type) %></td>
        <td><%= product.name %></td>
        <td><%= product.model %></td>
        <td><%= product.serial_number %></td>
        <td><%= product.mac_address %></td>
        <td><%= product.product_code %></td>
        <td><%= product.fabrication_date %></td>
        <%# revisar ideia da tabela de status nao ter uma abstrata %>
        <td><%=l product.created_at, format: :long %></td>
        <td><%= product_link product, class: 'btn btn-primary' do %>
          <%= glyph 'info-sign' %>
        <% end %>
        </td>
        <td>
    <!--
          <%= link_to product_path(product), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to product_path(product), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
		  -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

