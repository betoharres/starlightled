<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Serial number</th>
      <th>Mac address</th>
      <th>Product code</th>
      <th>Fabrication date</th>
      <th>Tension operation</th>
      <th>Node</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.model %></td>
        <td><%= product.serial_number %></td>
        <td><%= product.mac_address %></td>
        <td><%= product.product_code %></td>
        <td><%= product.fabrication_date %></td>
        <td><%= product.tension_operation %></td>
        <td><%= product.node %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

