<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :model %>
    <%= f.input :serial_number %>
    <%= f.input :mac_address %>
    <%= f.input :product_code %>
    <%= f.input :fabrication_date %>
    <%= f.input :tension_operation %>
    <%= f.association :node %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
