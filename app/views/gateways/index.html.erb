<%- model_class = Gateway -%>
<div class="page-header">
  <h1><!--<%=t '.title', :default => Gateway %>-->Gateways</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><!--<%= model_class.human_attribute_name(:ip) %>-->Endereço IP</th>
      <th><!--<%= model_class.human_attribute_name(:url_connection) %>-->URL</th>
      <th><!--<%= model_class.human_attribute_name(:created_at) %>-->Criado em</th>
      <th><!--<%=t '.actions', :default => t("helpers.actions") %>-->Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @gateways.each do |gateway| %>
      <tr>
        <td><%= gateway.id %></td>
        <td><%= gateway.ip %></td>
        <td><%= gateway.url_connection %></td>
        <td><%=l gateway.created_at, format: :long %></td>
        <td>
          <!--<%= link_to gateway_path(gateway), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>-->
		  <%= link_to gateway_path(gateway), :class => 'btn btn-xs', :title => "Mostrar" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <!--<%= link_to gateway_path(gateway), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>-->
		  <%= link_to gateway_path(gateway), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')) }, :class => 'btn btn-xs', :title => "Excluir" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

