<%- model_class = Gateway -%>
<div class="page-header">
  <h1><%=t '.title', :default => Gateway %></h1>
</div>
<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @product.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:model) %></dt>
      <dd><pre class="prettyprint"><%= @product.model %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:serial_number) %></dt>
      <dd><pre class="prettyprint"><%= @product.serial_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mac_address) %></dt>
      <dd><pre class="prettyprint"><%= @product.mac_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:product_code) %></dt>
      <dd><pre class="prettyprint"><%= @product.product_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fabrication_date) %></dt>
      <dd><pre class="prettyprint"><%= @product.fabrication_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tension_operation) %></dt>
      <dd><pre class="prettyprint"><%= @product.tension_operation %></pre></dd>
  </dl>
</div>
<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ip) %></dt>
      <dd><pre class="prettyprint"><%= @gateway.ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url_connection) %></dt>
      <dd><pre class="prettyprint"><%= @gateway.url_connection %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gateways_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gateway_path(@gateway), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gateway_path(@gateway),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

