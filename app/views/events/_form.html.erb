<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :active %>
    <%= f.association :node %>
    <%= f.association :event_code %>
    <%= f.association :param %>
    <%= f.input :serial_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
