<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<table>
  <table class="table table-striped">
    <tr>
      <th>Serial Number</th>
      <th>Modelo Produto</th>
      <th>Codigo do Evento</th>
      <th>Parametro</th>
      <th>Ativo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.serial_number %></td>
        <td><%= event.node.product.model %></td>
        <td><%= event.event_code.name %></td>
        <td><%= event.param.name %></td>
        <td><%= event.active %></td>
        <td><%= link_to 'Visualizar', event, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Deletar', event, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
