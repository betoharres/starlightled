<p id="notice"><%= notice %></p>

<h1>Configurações</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Versão</th>
      <th>Conteúdo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @config_files.each do |config_file| %>
      <tr>
        <td><%= config_file.name %></td>
        <td><%= config_file.version %></td>
        <td><%= config_file.content %></td>
        <td><%= link_to 'Visualizar', config_file, class: 'btn btn-link' %></td>
        <td><%= link_to 'Editar', edit_config_file_path(config_file), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Apagar', config_file, class: 'btn btn-link', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Configuração', new_config_file_path, class: 'btn btn-info' %>
