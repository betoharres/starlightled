<%- model_class = Lamp -%>
<div class="page-header">
  <h1><%=t '.title', :default => Lamp %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:font_type) %></dt>
      <dd><pre class="prettyprint"><%= @lamp.font_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:font_subtype) %></dt>
      <dd><pre class="prettyprint"><%= @lamp.font_subtype %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lamps_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lamp_path(@lamp), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lamp_path(@lamp),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

