<%= form_for @lamp, :html => { :class => 'form-horizontal form-model' } do |f| %>
<% if @lamp.errors.messages.any? %>
  <% @lamp.errors.messages.each do |k, v| %>
  <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Oops!</strong> <%= t(k.to_s) + v.first %>
  </div>
  <% end %>
<% end %>
  <%= render partial: 'tags/tag', locals: {f: f, model: @lamp} %>

  <%= f.fields_for :product_attributes, @lamp.product||Product.new do |ff| %>
    <%= render partial: 'products/product', locals: {ff: ff} %>
  <% end %>

  <div class="form-group">
    <!--<%= f.label :font_type, :class => 'control-label col-md-2' %>-->
	<label class="control-label col-md-2" for="lamp_font_type">Tipo de fonte</label>
    <div class="col-md-10">
      <%= f.text_field :font_type, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <!--<%= f.label :font_subtype, :class => 'control-label col-md-2' %>-->
	<label class="control-label col-md-2" for="lamp_font_subtype">Subtipo de fonte</label>
    <div class="col-md-10">
      <%= f.text_field :font_subtype, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <!--<%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  lamps_path, :class => 'btn btn-default' %>-->

    <%= f.submit nil, :value => 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("Cancelar")),
                  lamps_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
