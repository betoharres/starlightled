<h2>Programação Luminária</h2>


<div id="panelPlans" class="panel panel-default">
	<div class="panel-heading">Plano <%= select_tag :plan_id, options_for_select(1..7), :class => "form-control inline", :style => "width:70px" %></div>
	<div class="panel-body">
		<div class="form-group">
			<%= label_tag :dimerization, "Dimerização", :class => "control-label col-md-2" %>
			<div class="input-group m-b col-md-2">
				<%= select_tag :dimerization, options_for_select([0,10,20,30,40,50]), :class => "form-control" %>
				<span class="input-group-addon">%</span>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag :delay, "Defasagem", :class => "col-md-2 control-label" %>
			<div class="input-group m-b col-md-2">
				<%= number_field_tag :delay, nil, in: 0..254, :class => "form-control" %>
				<span class="input-group-addon">seg</span>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag nil, "Desabilitar Periféricos", :class => "col-md-2" %>
			<div class="col-md-10">
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor1 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Sensor de temperatura da placa LED 1</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor2 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Sensor de temperatura da placa LED 2</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor3 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Sensor de temperatura da placa fonte</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor4 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Sensor de luminosidade</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor5 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Memória externa</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor6 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Microcontrolador da placa LED 1</label>
				</div>
				<div class="checkbox c-checkbox">
					<label>
					<%= check_box_tag :sensor7 , nil, nil, disabled:true %>
					<span class="fa fa-check"></span>Microcontrolador da placa LED 2</label>
				</div>
			</div>
        </div>
	</div>
</div>


<div id="panelChanges" class="panel panel-default">
	 <div class="panel-heading">Trocas de Planos</div>
	 <div class="panel-body">
	 	<div id="resize-table-changes">
		<table class="table table-striped">
		  <thead>
		    <tr>
		      <th>#</th>
		      <th>Plano</th>
		      <th>Modo Operação</th>
		      <th>Dias da semana</th>
			  <th>Hora</th>
			  <th>Data Especial</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% for c in 1..6 do %>
		      <tr id='<%="change_#{c}"%>'>
		        <td><%= c %></td>
		        <td>
		        	<div class="plan-size">
		        		<%= select_tag "change_#{c}_plan", options_for_select(1..7), :class => "form-control", :style => "padding:6px" %>
					</div>
				</td>
				<td>
					<div class="mode-size">
						<%= select_tag "change_#{c}_mode", options_for_select([ ['Coordenado',1], ['Isolado',2], ['Atuado',3] ]), :class => "form-control", :style => "padding:6px" %></td>
					</div>
				<td>
					<div class="week-control">
						<div data-toggle="buttons" class="btn-group">
							<label class="btn btn-oval btn-default btn-sm" style="padding:6px 10px">
								<%= check_box_tag("change_#{c}_all") %>
								Todos
							</label>
						</div>
						<div class="btn-group" title="Nesta versão não é possível selecionar dias da semana de forma individual.">
							<div data-toggle="buttons" class="btn-group">
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_sun") %>D</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_mon") %>S</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_tue") %>T</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_wed") %>Q</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_thu") %>Q</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_fri") %>S</label>
								<label class="btn btn-default btn-sm">
								<%= check_box_tag("change_#{c}_sat") %>S</label>
							</div>
						</div>
					</div>
				</td>
				<td>
					<div class="input-group m-b col-sm-2">
						<%= select_tag "change_#{c}_hour", options_for_select(0..23), :class => "form-control", :style => "width:45px; padding:2px" %>
						<span class="input-group-addon" style="padding:6px">:</span>
						<%= select_tag "change_#{c}_minute", options_for_select(0..59), :class => "form-control", :style => "width:45px; padding:2px" %>
						<span class="input-group-addon" style="padding:6px">:</span>
						<%= select_tag "change_#{c}_secound", options_for_select(0..59), :class => "form-control", :style => "width:45px; padding:2px" %>
					</div>
				</td>
				<td>
					<div class="input-group m-b col-sm-2">
						<span class="especial_date input-group-addon" style="width:5px; padding:6px"><%= check_box_tag("change_#{c}_especial_date") %></span>
						<%= select_tag "change_#{c}_day", options_for_select(1..31), :class => "form-control", :style => "width:45px; padding:2px" %>
						<span class="input-group-addon" style="padding:6px">/</span>
						<%= select_tag "change_#{c}_month", options_for_select(1..12), :class => "form-control", :style => "width:45px; padding:2px" %>
						<span class="input-group-addon" style="padding:6px">/</span>
						<%= select_tag "change_#{c}_year", options_for_select(15..99), :class => "form-control", :style => "width:45px; padding:1px" %>
					</div>
				</td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		</div>
		<%= text_area_tag(:json, nil, size: "80x12") %>
	</div>
</div>



  <div class="form-actions">
    <%= f.button :submit, value: 'Salvar Configuração', :class => "btn-primary" %>
  </div>
