<%- model_class = Lamp -%>
<div class="page-header">
  <!-- <h1><%=t '.title', :default => Lamp %></h1> -->
  <h1>Luminárias</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><!--<%= model_class.human_attribute_name(:font_type) %>-->Tipo de fonte</th>
      <th><!--<%= model_class.human_attribute_name(:font_subtype) %>-->Subtipo de fonte</th>
      <th><!--<%= model_class.human_attribute_name(:created_at) %>-->Criado em</th>
      <th><!--<%=t '.actions', :default => t("helpers.actions") %>-->Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @lamps.each do |lamp| %>
      <tr>
        <td><%= lamp.id %></td>
        <td><%= lamp.font_type %></td>
        <td><%= lamp.font_subtype %></td>
        <td><%=l lamp.created_at, format: :long %></td>
        <td>
          <!--<%= link_to lamp_path(lamp), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to lamp_path(lamp), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>-->
		  
		  <%= link_to lamp_path(lamp), :class => 'btn btn-xs', :title => "Mostrar" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to lamp_path(lamp), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirmar?')) }, :class => 'btn btn-xs', :title => "Excluir" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

