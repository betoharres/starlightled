<!-- START Sidebar (left)-->
<div class="aside-inner">
   <nav class="sidebar" data-sidebar-anyclick-close="">
      <!-- START sidebar nav-->
      <ul class="nav">
         <!-- START user info-->
         <li class="has-user-block">
            <div id="user-block" class="collapse">
               <div class="item user-block">
                <% if current_user %>
                    <!-- User picture-->
                    <div class="user-block-picture">
                      <div class="user-block-status">
                          <img src="<%= image_path('angle/user/avatar.png') %>" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle" />
                          <div class="circle circle-success circle-lg"></div>
                      </div>
                    </div>
                    <!-- Name and Job-->
                    <div class="user-block-info">
                      <span class="user-block-name"><%= current_user ? link_to(current_user.name, edit_user_registration_path) : "" %></span>
                      <span class="user-block-role"><%= current_user ? current_user.role.name : "" %></span>
                      <a class="btn btn-link btn-lg btn-block" href="/signout">Sair</a>
                    </div>
                    <% else %>
                      <a class="btn btn-primary btn-lg btn-block" href="/login">Login</a>
                <% end %>
               </div>
            </div>
         </li>
         <!-- END user info-->
         <!-- Iterates over all sidebar items-->
         <li class="nav-heading">
            <span>Menu</span>
         </li>
          <li class="<%= 'active' if controller?('landings')%>">
            <a href="<%= root_url %>" title="Dashboard">
               <em class="icon-home"></em>
               <!-- <div class="label label&#45;info pull&#45;right">3</div> -->
               <span data-localize="sidebar.nav.DASHBOARD">Inicio</span>
            </a>
         </li>
         <li class="<%= 'active' if controller?('tags')%>">
            <a href="/tags" title="Dashboard">
               <em class="icon-grid"></em>
               <!-- <div class="label label&#45;info pull&#45;right">3</div> -->
               <span data-localize="sidebar.nav.DASHBOARD">Grupos</span>
            </a>
         </li>
         <li class="<%= 'active' if controller?('networks')%>">
            <a href="#networks" title="Redes" data-toggle="collapse">
               <em class="icon-vector"></em>
               <!-- <div class="label label&#45;info pull&#45;right">3</div> -->
               <span data-localize="sidebar.nav.DASHBOARD">Rede</span>
            </a>
            <ul id="networks" class="nav sidebar-subnav collapse">
               <li class="sidebar-subnav-header">Rede</li>
               <li class="<%= 'active' if controller?('networks') && action?('index') %>">
                 <%= link_to networks_path do %>
                  <em class="icon-list"></em>
                  <span>Listar</span>
                 <% end %>
               </li>
               <li class="<%= 'active' if controller?('networks') && action?('new') %>">
                  <%= link_to new_network_path do %>
                    <em class="icon-plus"></em>
                    <span>Nova Rede</span>
                  <% end %>
               </li>
            </ul>
         </li>
         <li class="<%= 'active' if controller?('lamps')%>">
            <a href="#lamps" title="Luminaria" data-toggle="collapse">
               <em class="icon-bulb"></em>
               <!-- <div class="label label&#45;info pull&#45;right">3</div> -->
               <span data-localize="sidebar.nav.DASHBOARD">Luminaria</span>
            </a>
            <ul id="lamps" class="nav sidebar-subnav collapse">
               <li class="sidebar-subnav-header">Luminaria</li>
               <li class="<%= 'active' if controller?('lamps') && action?('index') %>">
                 <%= link_to lamps_path do %>
                  <em class="icon-list"></em>
                  <span>Listar</span>
                 <% end %>
               </li>
               <li class="<%= 'active' if controller?('lamps') && action?('new') %>">
                  <%= link_to new_lamp_path do %>
                    <em class="icon-plus"></em>
                    <span>Nova Luminaria</span>
                  <% end %>
               </li>
            </ul>
          </li>
          <li class="<%= 'active' if controller?('gateways')%>">
            <a href="#gateways" title="Gateway" data-toggle="collapse">
               <em class="icon-feed"></em>
               <!-- <div class="label label&#45;info pull&#45;right">3</div> -->
               <span data-localize="sidebar.nav.DASHBOARD">Gateway</span>
            </a>
            <ul id="gateways" class="nav sidebar-subnav collapse">
               <li class="sidebar-subnav-header">Gateways</li>
               <li class="<%= 'active' if controller?('gateways') && action?('index') %>">
                 <%= link_to gateways_path do %>
                  <em class="icon-list"></em>
                  <span>Listar</span>
                 <% end %>
               </li>
               <li class="<%= 'active' if controller?('gateways') && action?('new') %>">
                  <%= link_to new_gateway_path do %>
                    <em class="icon-plus"></em>
                    <span>Novo Gateway</span>
                  <% end %>
               </li>
            </ul>
         </li>
      </ul>
      <!-- END sidebar nav-->
   </nav>
</div>
<!-- END Sidebar (left)-->

