<%= form_for :node, url: {controller: 'nodes', action: 'create'}, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <!--<%= f.label :identifier, :class => 'control-label col-md-2' %>-->
  <label class="control-label col-md-2" for="node_identifier">Identificador</label>
    <div class="col-md-10">
      <%= f.text_field :identifier, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
  <label class="control-label col-md-2" for="latitude">Latitude</label>
    <div class="col-md-10">
      <%= f.text_field :latitude, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
  <label class="control-label col-md-2" for="longitude">Longitude</label>
    <div class="col-md-10">
      <%= f.text_field :longitude, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
  <!--
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  network_path(params[:network_id]), :class => 'btn btn-default' %>
  -->

    <%= f.submit nil, :value => 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => "Cancelar"),
                  network_path(params[:network_id]), :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
